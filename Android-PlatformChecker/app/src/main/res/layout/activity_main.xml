<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
tools:context=".MainCheckerActivity"
    >

    <life.sabujak.roundedbutton.RoundedButton
        android:id="@+id/checkEmulationStatus1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        android:gravity="center"
        android:padding="24dp"
        android:textSize="20dp"
        android:text="Run Emulation Check 1"
        android:textColor="#ffffff"
        app:buttonGradientStartColor="@color/colorPrimary"
        app:buttonGradientEndColor="@color/colorAccent"
        app:buttonCornerRadius="20dp"
        android:layout_centerInParent="true"
        />

    <life.sabujak.roundedbutton.RoundedButton
        android:id="@+id/checkEmulationStatus2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        android:gravity="center"
        android:padding="24dp"
        android:textSize="20dp"
        android:text="Run Emulation Check 2"
        android:textColor="#ffffff"
        app:buttonGradientStartColor="@color/colorPrimary"
        app:buttonGradientEndColor="@color/colorAccent"
        app:buttonCornerRadius="20dp"
        android:layout_centerInParent="true"
        />

    <life.sabujak.roundedbutton.RoundedButton
        android:id="@+id/checkRootStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        android:gravity="center"
        android:padding="24dp"
        android:textSize="20dp"
        android:text="Run Root Check"
        android:textColor="#ffffff"
        app:buttonGradientStartColor="@color/colorPrimary"
        app:buttonGradientEndColor="@color/colorAccent"
        app:buttonCornerRadius="20dp"
        android:layout_centerInParent="true"
        />

<!--<View-->
